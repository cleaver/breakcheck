{
  "name": "breakcheck",
  "version": "0.1.0",
  "description": "A tool for comparing website states before and after changes to detect visual regressions and unexpected modifications.",
  "type": "module",
  "bin": {
    "breakcheck": "dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/api/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/api/index.js",
      "require": "./dist/api/index.js"
    }
  },
  "files": [
    "dist",
    "src/views"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cleaver/breakcheck"
  },
  "keywords": [
    "regression",
    "testing",
    "automation",
    "visual-regression",
    "website-testing",
    "diff"
  ],
  "scripts": {
    "dev": "LOG_LEVEL=debug NODE_ENV=development tsx src/index.ts",
    "dev:debug": "LOG_LEVEL=debug NODE_ENV=development tsx --inspect-brk src/index.ts",
    "start": "node dist/index.js",
    "build": "rm -rf dist && tsc",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test-server:before": "node src/__test_server__/server-before.js",
    "test-server:after": "node src/__test_server__/server-after.js"
  },
  "author": "Cleaver Barnes",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/commander": "^2.12.0",
    "@types/diff": "^7.0.2",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.2",
    "@vitest/coverage-v8": "^3.1.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "chevrotain": "^11.0.3",
    "commander": "^13.1.0",
    "crawlee": "^3.8.4",
    "diff": "^7.0.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "interactive-commander": "^0.6.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "playwright": "^1.52.0"
  }
}
