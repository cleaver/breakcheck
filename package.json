    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "crawlee": "^3.8.4",
    "diff": "^7.0.0",
    "interactive-commander": "^0.6.0",
    "pino": "^9.6.0",
