<!DOCTYPE html>
<html>

<head>
    <title>BreakCheck - <%= comparisonName %>
    </title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
            line-height: 1.6;
        }

        h1 {
            color: #333;
            border-bottom: 2px solid #eee;
            padding-bottom: 0.5rem;
        }

        h2 {
            color: #444;
            margin-top: 2rem;
        }

        .page-list {
            list-style: none;
            padding: 0;
        }

        .page-list li {
            margin: 0.5rem 0;
        }

        .page-list a {
            color: #0066cc;
            text-decoration: none;
            padding: 0.5rem;
            border-radius: 4px;
            display: inline-block;
        }

        .page-list a:hover {
            background: #f5f5f5;
        }

        .unchanged {
            color: #666;
        }
    </style>
</head>

<body>
    <h1>BreakCheck Comparison: <%= comparisonName %>
    </h1>

    <% if (pagesWithDifferences.length> 0) { %>
        <h2>Pages with Differences</h2>
        <ul class="page-list">
            <% pagesWithDifferences.forEach(function(page) { %>
                <li>
                    <a href="/diff?page=<%= encodeURIComponent(page.url) %>">
                        <%= page.url %>
                    </a>
                </li>
                <% }); %>
        </ul>
        <% } %>

            <% if (unchangedPages.length> 0) { %>
                <h2>Unchanged Pages</h2>
                <ul class="page-list unchanged">
                    <% unchangedPages.forEach(function(page) { %>
                        <li>
                            <%= page.url %>
                        </li>
                        <% }); %>
                </ul>
                <% } %>
</body>

</html>